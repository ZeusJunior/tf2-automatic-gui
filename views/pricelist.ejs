<!DOCTYPE HTML>
<html lang="en">
<head lang="en">
    <meta charset="UTF-8">
    <title>Pricelist</title>
    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src='/pricelist.js'></script>
</head>
<body>

<%- include("partials/navbar") %>
<br>

<% if (msg !== 'none') { %>
    <div class="alert alert-<%=type%>" role="alert">
      <%= msg %>
    </div>
<% } %>

<button class="btn btn-danger" type="submit" form="frm" value="Submit">Delete selected</button>

<form method="POST" action="" id="frm">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">SKU</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            <% pricelist.forEach(item => { %>
                <tr>
                    <td>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="<%= item.sku %>" name='list' value='<%= item.sku %>'>
                            <label class="custom-control-label" for="<%= item.sku %>"></label><%= item.sku %></label>
                        </div>
                    </td>
                    <td><%= item.name %></td>
                </tr>
            <% }) %>
        </tbody>
        <tfoot>
            <tr>
                <th scope="col">SKU</th>
                <th scope="col">Name</th>
            </tr>
        </tfoot>
    </table>
</form>

</body>
</html>